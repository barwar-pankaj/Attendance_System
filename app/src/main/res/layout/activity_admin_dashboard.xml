<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboard">

    <Button
        android:id="@+id/adminLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="7dp"
        android:text="LogOut"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/adminID"
        android:layout_width="199dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/courses_background"
        android:gravity="center_horizontal|center_vertical"
        android:text="Admin"
        android:textAlignment="center"
        android:textColor="#E8E8E8"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/newView2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="92dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addFacultyDetails"
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="134dp"
        android:backgroundTint="#A859A7"
        android:text="Add Faculty"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newView2" />

    <Button
        android:id="@+id/addCoursesForFaculty"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#A859A7"
        android:text="Add Courses For Faculty"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/addFacultyDetails"
        app:layout_constraintTop_toBottomOf="@+id/addFacultyDetails" />

    <Button
        android:id="@+id/addStudentDetails"
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_marginTop="144dp"
        android:backgroundTint="#59897C"
        android:text="Add Student"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/addFacultyDetails"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addFacultyDetails"
        app:layout_constraintTop_toBottomOf="@+id/addFacultyDetails" />

    <Button
        android:id="@+id/addCoursesForStudents"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#59897C"
        android:text="Add Courses For Students"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/addStudentDetails"
        app:layout_constraintTop_toBottomOf="@+id/addStudentDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>