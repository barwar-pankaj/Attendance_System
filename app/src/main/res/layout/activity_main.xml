<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScreeen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#ffffff"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/student"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="#79BD8A"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/student"
        android:textSize="24sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/teacher" />

    <Button
        android:id="@+id/teacher"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:backgroundTint="#D89D6A"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/teacher"
        android:textColorHighlight="#D83232"
        android:textColorLink="#DD4343"
        android:textSize="24sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/student"
        app:layout_constraintStart_toStartOf="@+id/adminButton"
        app:layout_constraintTop_toBottomOf="@+id/adminButton" />

    <Button
        android:id="@+id/adminButton"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:backgroundTint="#567DDF"
        android:gravity="center_vertical|center_horizontal"
        android:text="Admin"
        android:textColorHighlight="#D83232"
        android:textColorLink="#DD4343"
        android:textSize="24sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />
</androidx.constraintlayout.widget.ConstraintLayout>